<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:layout_marginLeft="100sp"
    android:layout_marginRight="100sp"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar">

    <Button
        android:key="@+id/sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonSell"
        android:text="sell" />

    <Button
        android:key="@+id/deliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deliver"
        android:onClick="buttonDeliver"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:key="@+id/locations"
        android:onClick="buttonSettings"
        android:text="Settings" />

    <Button
        android:key="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonLogout"
        android:text="Logout" />

    <Button
        android:key="@+id/buttonExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonExit"
        android:text="Exit" />
</LinearLayout>